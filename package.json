{
  "name": "quick-qr",
  "description": "A clean-ui and fast qr code creator.",
  "version": "1.1.0",
  "private": true,
  "author": {
    "name": "Mohammed Taha",
    "email": "gsft22221@gmail.com"
  },
  "build": {
    "appId": "com.app.quickqr",
    "productName": "Quick QR",
    "copyright": "Copyright Â© 2021 Mohammed Taha",
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "differentialPackage": false
    },
    "portable": {
      "artifactName": "${productName} Portable ${version}.${ext}"
    }
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder -w",
    "release": "npm run react-build && electron-builder --publish=always",
    "build": "npm run react-build && npm run electron-build",
    "start": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "dependencies": {
    "@codemirror/lang-javascript": "^0.19.2",
    "@electron/remote": "^2.0.1",
    "@heroicons/react": "^1.0.5",
    "@sentry/react": "^6.14.1",
    "@sentry/tracing": "^6.14.1",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "ansi-html": "0.0.7",
    "axios": "^0.24.0",
    "codemirror": "^5.63.3",
    "concurrently": "^6.3.0",
    "cross-env": "^7.0.3",
    "electron-dl": "^3.3.0",
    "electron-is-dev": "^2.0.0",
    "electron-save-file": "^1.0.2",
    "immer": "^9.0.6",
    "is-electron": "^2.2.0",
    "nth-check": "^2.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "set-value": "^4.1.0",
    "wait-on": "^6.0.0",
    "web-vitals": "^1.1.2"
  },
  "devDependencies": {
    "electron": "^15.3.1",
    "electron-builder": "^22.13.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
